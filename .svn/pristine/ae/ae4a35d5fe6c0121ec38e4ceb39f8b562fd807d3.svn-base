<ion-header>

    <ion-navbar>
        <ion-title>Complete Task</ion-title>
    </ion-navbar>

</ion-header>


<ion-content no-padding>
    <ion-card>
        <ion-card-content>
            <ion-grid>
                <ion-row>

                    <div><strong>Enter Task Notes</strong> (not required)</div>


                </ion-row>
                <ion-row>
                    <ion-textarea class="" [(ngModel)]="data.notes" placeholder="" (blur)="trimNotes()"></ion-textarea>
                </ion-row>
            </ion-grid>

            <ion-list>

                <ion-row>
                    <ion-col width-50>
                        <button class="image-btn width100" ion-button icon-left block color="secondary"
                                (click)="presentActionSheet(false)">
                            <ion-icon name="add-circle"></ion-icon>
                            Add Image
                        </button>
                    </ion-col>
                    <ion-col width-50>
                        <button class="image-btn width100" ion-button icon-left block color="primary"
                                (click)="presentActionSheet(true)">
                            <ion-icon name="add-circle"></ion-icon>
                            Add Document Image
                        </button>
                    </ion-col>
                </ion-row>


                <ion-list *ngFor="let file of data.files; let i = index">
                    <ion-item>
                        {{file.name}}
                        <button ion-button icon-only item-right clear (click)="deleteImage(i)">
                            <ion-icon color="danger" name="trash"></ion-icon>
                        </button>
                    </ion-item>
                    <ion-item>
                        <ion-label stacked>Caption</ion-label>
                        <ion-input [(ngModel)]="data.files[i].caption"></ion-input>
                    </ion-item>

                </ion-list>


            </ion-list>


        </ion-card-content>

        <ion-row class="mar-top100">
            <ion-col width-50>
                <button ion-button icon-left block color="secondary" (click)="save()">
                    <ion-icon name="checkbox-outline"></ion-icon>
                    Save
                </button>
            </ion-col>
            <ion-col width-50>
                <button ion-button icon-left block color="dark" (click)="cancel()">
                    <ion-icon name="close"></ion-icon>
                    Cancel
                </button>
            </ion-col>
        </ion-row>


    </ion-card>
</ion-content>
