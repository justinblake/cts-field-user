    background-color: white;
    color: orange;
  }

  .head-font {
    font-size: 2.5rem;
  }

  ion-grid ion-row ion-col {
    height: 40px;
  }

  ion-footer ion-grid {
    height: 62px;
  }

  .laborer-btn {
    color: white;
    font-weight: bolder;
    background-color: #57AD57;
    border-radius: 7px;
    box-shadow: 4px 4px 4px 0 rgba(0, 0, 0, 0.85);
    width: 100%;
    font-size: 1.7rem;
  }

  .task-icon {
    top: 16px;
    right: -20px;
    color: #3F51B5;
  }

  @media (max-width: 426px) {
    .next-space {
      width: 110%;
      margin-left: -5%;
    }
  }

  @media (max-width: 376px) {
    .task-icon {
      right: -10px;
    }
    .laborer-btn {
      width: 120%;
      font-size: 1.6rem;
      margin-left: -10px;
    }
    .next-space {
      width: 109%;
      margin-left: -5%;
    }
  }

  @media (max-width: 350px) {
    .task-icon {
      right: -5px;
    }
    .newTime {
      color: white;
      top: -1px;
    }
    .laborer-btn {
      width: 130%;
      font-size: 1.5rem;
      margin-left: -15px;
    }
    .next-space {
      width: 112%;
      margin-left: -6%;
    }
  }

