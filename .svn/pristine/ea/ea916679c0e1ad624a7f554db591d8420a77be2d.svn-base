  .phone-space {
    margin: -5px 0px !important;
  }

  .supplier-phone {
    font-size: 1.6rem !important;
    margin-left: -17px;
  }

  .btn-width {
    width: 100%;
  }

  .directions {
    margin-left: -13px;
  }

  .btns-center {
    display: inline-flex;
  }
  .next-day {
    font-size: 2.2rem;
  }
  .next-day-head {
    padding: 0;
  }

  .btn-margin {
    margin-left: 11px;
    color: orange;
    box-shadow: 4px 4px 4px 0 rgba(0, 0, 0, 0.35);
