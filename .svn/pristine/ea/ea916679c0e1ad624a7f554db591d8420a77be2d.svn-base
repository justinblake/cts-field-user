page-next-day {
  .card p {
    color: #000;
    font-size: 1.7rem;
  }

  .time {
    color: #3F51B5;
  }
  h3 {
    font-size: 1.8rem !important;
    margin: 8px 0 8px 0 !important;
  }

  h4 {
    font-size: 1.5rem !important;
  }

  h5 {
    font-size: 1.2rem !important;
  }
