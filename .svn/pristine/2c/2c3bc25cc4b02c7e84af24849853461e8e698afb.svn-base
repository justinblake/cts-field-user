page-alerts {

  .read-alert {
    background-color: #EFEFEF;
  }

  .unread-alert {
    background-color: #FF6674;
    color: #FFFB7F;
  }

  //.card-header-md {
  //  font-size: 2.5rem;
  //}
  //
  //.card-header-ios {
  //  font-size: 2.5rem;
  //}

  .read-alert > .text-info {
    color: orange;
    font-weight: bold;
    font-size: 2.5rem !important;
    margin-top: 0;
    margin-bottom: 0;
  }

  h3 {
    font-size: 2.2rem !important;
  }

  h4 {
    font-size: 2rem !important;
  }

  h5 {
    font-size: 1.8rem !important;
  }

  h6 {
    font-size: 1.6rem !important;
  }

  .message {
    resize: none;
    padding: 10px;
  }

  .myInput {
    display: block;
    opacity: 0;
    width: 30px;
    height: 20px;
  }

  .alerts-footer {
    bottom: 50px;
    background-color: #EFEFEF;
  }

  .last {
    margin-bottom: 85px;
  }

  .iosPhone {
    margin-top: -2px
  }

  .no-alerts {
    font-weight: 700;
    font-size: 2.5rem;
  }
